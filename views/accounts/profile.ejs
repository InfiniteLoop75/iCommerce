<% layout('layout') -%>
<div class="container">
    <div class="row">
    <div class="col-sm-6 col-md-4">
        <img src="<%=user.profile.picture %>" alt="Proile Image" class="img-circle img-center img-responsive">
        <br>
        <p>Name: <%=user.profile.name %></p>
        <p>Email: <%=user.email %></p>

        <%if(user.profile.address === "" || typeof user.profile.address ==='undefined'){%>
            <p>Adress: <span style="color: #c0392b; font-weight:bold">You have no address</span></p>
        <%} else{%>
            <p>Address: <%= user.profile.address %></p>
        <%}%>
        

        <a href="/edit-profile" class="btn btn-primary btn-lg">Edit profile</a>
    </div>
</div>
</div>  

